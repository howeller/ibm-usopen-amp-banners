/* Burst Section */

.burst-container {
	position: relative;
}
.burst {
	position: absolute;
	display: block;
	left: calc(50% - .5em);
	font-size: 9px; /* main controller*/
}
.burst ul {
	list-style: none;
	margin: 0;
	padding: 0;
	width: 9px;/*{{!16px;}}*/
	height: 33px;/*{{!50px;*/ /* 3.125em}}*/
}
.burst li {
	display: block;
	position: absolute;
	top: 0;
	right: 0;
	width: 9px;/*{{!16px;}}*/
	height: 33px;/*{{!50px;}}*/ 
	background-color: white;
	border-radius: 8px;
	box-shadow: 3px 3px 10px rgba(0,0,0,0.5);
	transform-origin:6px 12.500em ;
	animation-name: burstIn;
	animation-duration: 0.5s;
	animation-delay: calc(var(--ani-order) * 350ms + var(--burst));
	animation-fill-mode: both;
	animation-timing-function: ease-in;
	backface-visibility: hidden;
}
.burst li:nth-child(1) {
	transform: rotate(-60deg);
}
.burst li:nth-child(2) {
	transform: rotate(-30deg);
}
{{!--/*.burst li:nth-child(3) {
 transform: rotate(90deg);
}*/--}}
.burst li:nth-child(4) {
	transform: rotate(30deg);
}
.burst li:nth-child(5) {
	transform: rotate(60deg);
}

/* Burst Ani */
@keyframes burstIn {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}
