/* Burst Section */
.burst-container {
	position: relative;
}

.burst {
	position: absolute;
	display: block;
	/* width: 10px;
	height: 10px; */
	left: calc(50% - .5em);
	font-size: 13px; /* main controller*/
}
.burst ul {
	list-style: none;
	margin: 0;
	padding: 0;
	width: 16px;
	height: 50px; /* 3.125em*/
}
.burst li {
	display: block;
	position: absolute;
	top: 0;
	right: 0;
	width: 16px;
	height: 50px; 
	background-color: white;
	border-radius: 8px;
	transform-origin:8px 12.500em ;
	animation-name: burstIn;
	animation-duration: 0.5s;
	animation-delay: calc(var(--ani-order) * 150ms + var(--burst));
	animation-fill-mode: both;
	animation-timing-function: ease-out;
}
.burst li:nth-child(1) {
	transform: rotate(-60deg);
}
.burst li:nth-child(2) {
	transform: rotate(-30deg);
}
 /* 
