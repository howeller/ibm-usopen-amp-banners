.cta-container {
	bottom: 4vh;
	display: flex;
	justify-content: center;
	position: absolute;
	width: 100vw;
}

.cta-container a {
	background-color: var(--blue);
	box-shadow: 2px 2px 10px rgba(0,0,0,0.7);
	border: none; 
	border-radius: 0.7em;
	color: white; 
	cursor: pointer;
	font-family: "IBMPlexSans";
  font-size: clamp(15px, 4vw, 38px);
	padding: 0.5em 2.2em;
	text-decoration: none;
}
