body {
	overflow: hidden;
	position: relative;
}
* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

.bg img {
	object-fit: cover;
}
{{#if phone}}
.container {
	display: grid;
	font-family: "IBMPlexSans";
	grid-template-columns: 1fr;
	grid-template-rows: min-content auto 62px min-content;
	gap: 2rem;
	color: white;
	max-width: 600px;
	margin: auto;
	height: 100vh;
}{{else}}
.container {
	display: grid;
	font-family: "IBMPlexSans";
	grid-template-columns: 1fr;
	grid-template-rows: min-content auto auto;
	gap: 2rem;
	color: white;
	max-width: 600px;
	margin: auto;
	height: 100vh;
}{{/if}}
.container > div {
	padding: 0 clamp(40px, 4vw, 50vw);
}

/* Logo Section */

.logo-container{
	margin-top: 4vw;
	overflow: visible;
}
.logo-container img {
	/*object-fit: cover;*/
	max-height: 72px; 
	width: clamp(270px, 4vw, 180px);
	height: auto;
}

/* Text Section */
.text-container {
  position: relative;
}
.text-container .text {
  margin: 0;
  position: absolute;
  top: 0;
}
.text-container .text.frame-1 {
  font-size: clamp(25px, 6vw, 58px);
}
.text-container .text.frame-2 {
  font-size: clamp(25px, 6vw, 38px);
}
.text-container .text.frame-3 {
  font-size: clamp(25px, 6vw, 58px);
}
.text-container .text span {
  display: block;
  font-size: inherit;
  overflow: hidden;
}

/* Text Animations */

:root{
	--frame2: 4.5s;
	--frame3: 9.5s;
	--burst: 11.5s;
	--stagger: 150ms;
	--stagger1: 1s;
}
.text-container .frame-1 span i {
	display: block;
	font-style: normal;
	animation-name: txtIn, txtOut;
	animation-duration: 0.5s, 0.7s;
	/*animation-delay: calc(attr(data-delay) * var(--stagger)), calc(attr(data-delay) * var(--stagger) + 2s);*/
	animation-delay: calc(var(--ani-order) * var(--stagger1)), calc(var(--ani-order) * var(--stagger) + 4s);
	animation-fill-mode: both;
	animation-timing-function: ease-out, ease-in;
}
.text-container .frame-2 span i {
	display: block;
	font-style: normal;
	animation-name: txtIn, txtOut;
	animation-duration: 0.5s, 0.7s;
	animation-delay: calc(var(--ani-order) * var(--stagger) + var(--frame2)), calc(var(--ani-order) * var(--stagger) + var(--frame2) + 4s);
	animation-fill-mode: both;
	animation-timing-function: ease-out, ease-in;
}
.text-container .frame-3 span i {
	display: block;
	font-style: normal;
	animation-name: txtIn;
	animation-duration: 0.3s;
	animation-delay: calc(var(--ani-order) * var(--stagger) + var(--frame3));
	animation-fill-mode: both;
	animation-timing-function: ease-out;
}

@keyframes txtIn {
	0% {
		opacity: 0;
		transform: translateY(50px);
	}
	100% {
		opacity: 1;
	}
}
@keyframes txtOut {
	0% {
		opacity: 1;
	}
	100% {
		opacity: 0;
		transform: translateY(-50px);
	}
}

/* Hero Phone and Ball Section */
.hero-container {
  overflow: visible;
  display: flex;
  justify-content: center;
}
