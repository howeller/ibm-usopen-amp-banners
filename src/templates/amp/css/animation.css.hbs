	animation-name: txtIn, txtOut;
	animation-duration: 0.6s, 1s;
	/*animation-delay: calc(attr(data-delay) * 300ms);*/
	animation-delay: calc(var(--ani-order) * 300ms);
	animation-fill-mode: both;
	animation-timing-function: ease-out;
}
