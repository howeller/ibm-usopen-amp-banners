@keyframes txtIn {
	0% {
		/*opacity: 0;*/
		transform: translateY(50px);
	}
	100% {
		opacity: 1;
	}
}
@keyframes txtOut {
	0% {
		opacity: 1;
	}
	100% {
		opacity: 0;
		transform: translateY(-50px);
	}
}